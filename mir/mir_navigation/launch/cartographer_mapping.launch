<launch>  
    <!--When using the cartographer mapping with the mir_100.launch or mir_200.lanch files
    out of the mir_launch_sim repo, please make sure to comment the amcl node. Otherwise
    the robot will get two odom frames that collide with each other!-->
    <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" args="
            -configuration_directory $(find mir_navigation)/config/cartographer
            -configuration_basename mir_config.lua" output="screen">
        <remap from="scan_1" to="f_timed_scan" />
        <remap from="scan_2" to="b_timed_scan" />
        <remap from="odom" to="/mobile_base_controller/odom" />
        <remap from="imu" to="imu_data"></remap>
    </node>
  
    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
        type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>